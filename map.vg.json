{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Crude Death Rate by State in Malaysia",
  "width": 700,
  "height": 300,
  "projection": {"type": "mercator"},
  "layer": [
    {"data": {
      "url": "https://raw.githubusercontent.com/suetyeehebe/FIT3179_DataVisualisation2/refs/heads/main/ne_1.json",
      "format": { "type": "topojson", "feature": "ne_10m_admin_1_states_provinces" }
    },
      "transform": [
    {"filter": "datum.properties.admin === 'Malaysia'"},
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/suetyeehebe/FIT3179_DataVisualisation2/refs/heads/main/data/death_state_clean.csv"
        },
        "key": "state",
        "fields": ["rate"]
      }
    },
    {"calculate": "datum.rate", "as": "Deaths per 1,000 population"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Deaths per 1,000 population",
      "type": "quantitative",
      "scale": {
            "type": "threshold",
            "domain": [3, 5, 6, 7],
            "range": ["#fef0d9","#fdcc8a","#fc8d59","#e34a33","#b30000"]
          }
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "Deaths per 1,000 population", "type": "quantitative"}
    ]
  }
  },
  {
      "data": {
      "url": "https://raw.githubusercontent.com/suetyeehebe/FIT3179_DataVisualisation2/refs/heads/main/ne_1.json",
      "format": {"type": "topojson", "feature": "ne_110m_graticules_5"}
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "lightgray"}
    }
  ]

}