{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "title": "Top 5 Causes of Death by Age Group (2020)",
  "data": {
    "url": "https://raw.githubusercontent.com/suetyeehebe/FIT3179_DataVisualisation2/refs/heads/main/data/leading_causes_by_age.csv"
  },
  "transform": [
    { "filter": "datum.Year == 2020" }, 
    {
      "calculate": "test(/jan$/i, datum['Age Group']) ? '1-4' : (test(/may$/i,datum['Age Group']) ? '5-14' : datum['Age Group'])",
      "as": "Age Group"
    }
  ],
  "encoding": {
    "x": {
      "field": "Age Group",
      "type": "ordinal",
      "sort": ["0", "1-4", "5-14", "15-24", "25-34", "35-54", "55-74", "75+"],
      "axis": { "labelAngle": 0 }
    },
    "y": {
      "aggregate": "sum",
      "field": "Percentage of cause-specific deaths out of total deaths",
      "type": "quantitative",
      "title": "Percentage of Cause-specific Deaths (%)"
    }
  },
  "layer": [
    {
      "params": [
        {
          "name": "causes_highlight",
          "select": { "type": "point", "fields": ["Indicator Name"] },
          "bind": "legend"
        }
      ],
      "mark": "bar",
      "encoding": {
        "color": {
          "field": "Indicator Name",
          "type": "nominal",
          "scale": {"scheme": "tableau20"},
          "title": "Causes",
          "legend": { "labelLimit": 0 }
        },
        "opacity": {
          "condition": { "param": "causes_highlight", "value": 0.8 },
          "value": 0.2
        },
        "tooltip": [
          { "field": "Age Group" },
          { "field": "Indicator Name", "title": "Cause" },
          { "aggregate": "sum", "field": "Percentage of cause-specific deaths out of total deaths", "title": "Share of Deaths by Cause (%)","format": ".2f" }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": -14,
        "dy": -8,
        "fontSize":12
      },
      "encoding": {
        "text": {
          "aggregate": "sum",
          "field": "Percentage of cause-specific deaths out of total deaths",
          "type": "quantitative",
          "format": ".2f"
        }
      }
    }
  ]
}
