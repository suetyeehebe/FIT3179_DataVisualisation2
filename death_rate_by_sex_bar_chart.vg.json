{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": "Male vs Female Death Rates by State",
  "width": "container",
  "height": 400, 
  "data": { "url": "https://raw.githubusercontent.com/suetyeehebe/FIT3179_DataVisualisation2/refs/heads/main/data/death_sex_ethnic_state_normalised.csv"},
  "params": [
  {
  "name": "Year",
  "value": 2022,
  "bind": {"input": "range", "min": 2010, "max": 2023, "step": 1}
  }
  ],

  "transform": [
    {"filter": "datum.year == Year"},
    {
      "calculate": "datum.sex == 'female' ? -toNumber(datum.deaths_per_100k) : toNumber(datum.deaths_per_100k)",
      "as": "signed_deaths"
    }
  ],
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "state",
      "type": "nominal",
      "title": "State",
      "sort": "descending"
    },
    "x": {
      "field": "signed_deaths",
      "type": "quantitative",
      "title": "Death rate (per 100,000 population)",
      "scale": { "domain": [-1000, 1000] },
      "axis": {
        "labelExpr": "abs(datum.value)",
        "grid": true
      }
    },
    "color": {
      "field": "sex",
      "type": "nominal",
      "scale": {"range": 
      ["#FF9DA6", "#4C78A8"]},
      "legend": {"orient": "top", "title": null}
    },
      "tooltip": [
        {"field": "state", "type": "nominal", "title": "State"},
        {"field": "sex", "type": "nominal", "title": "Sex"},
        {"field": "deaths_per_100k", "type": "quantitative", "title": "Death rate (per 100,000 population)", "format": ".1f"},
        { "field": "year", "type": "ordinal", "title": "Year" }
      ]
  },
  "config": {
    "view": {"stroke": null}
  }
}
